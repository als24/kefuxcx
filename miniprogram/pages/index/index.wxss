
.chat-card {
  display: flex;
  align-items: center;
  margin-left: 20rpx;
  margin-right: 20rpx;
  height: 140rpx;
  border-bottom: 1rpx solid rgba(242, 242, 242, 0.8);
}

.chat-card:last-child {
  border-bottom: none;
}

.chat-image {
  flex-shrink: 0;
  width: 80rpx;
  height: 80rpx;
}

.chat-info {
  flex: 1;
  padding: 27rpx;
  width: 500rpx;
  height: 100%;
  box-sizing: border-box;
  font-size: 28rpx;
  line-height: 40rpx;
}

.chat-name {
  color: rgba(29, 29, 38, 0.8);
}

.chat-text {
  display: flex;
  margin-top: 8rpx;
  width:500rpx;
}

.chat-opr {
  flex-shrink: 0;
  /* margin-left: 59rpx; */
  padding-top: 34rpx;
  height: 100%;
  box-sizing: border-box;
  font-size: 22rpx;
}


.chat-count {
  /* margin-top: 39rpx; */
  display: flex;
  line-height: 40rpx;
  text-align: center;
  width: 120rpx;
}
